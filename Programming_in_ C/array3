#include <stdio.h>

// Function prototypes
void input(int a[100], int n);
void output(int a[100], int n);
void reverse(int a[100], int n);

int main()
{
    int a[100], n;
    printf("Enter the number of elements in the array: ");
    scanf("%d", &n);
    
    input(a, n);
    output(a, n);
    reverse(a, n);
    
    return 0;
}

// Function to input elements into the array
void input(int a[100], int n)
{
    printf("Enter the elements of the array: ");
    for (int i = 0; i < n; i++)
    {
        scanf("%d", &a[i]);
    }
}

// Function to output elements of the array
void output(int a[100], int n)
{
    printf("The elements of the array are: ");
    for (int i = 0; i < n; i++)
    {
        printf("%d ", a[i]);
    }
    printf("\n");
}

// Function to output elements of the array in reverse order
void reverse(int a[100], int n)
{
    printf("The elements of the array in reverse order are: ");
    for (int i = n - 1; i >= 0; i--)
    {
        printf("%d ", a[i]);
    }
    printf("\n");
}